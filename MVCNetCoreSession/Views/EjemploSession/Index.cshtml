@using MVCNetCoreSession.Helpers
@{
	Mascota mascota = null;

	string data = Context.Session.GetString("MASCOTA");

	if (Context.Session.GetString("MASCOTA") != null)
	{

		mascota = HelperJsonSession.DeserializeObject<Mascota>(data);
	}

	
}

@if(mascota != null){
	<h1>Funciona mascota? @mascota.Nombre</h1>
}
<h1> Session Ejemplo</h1>

<h2>@Context.Session.GetString("nombre")</h2>

<h2>@Context.Session.GetString("hora")</h2>


